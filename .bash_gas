if [[ $(hostname -d) == "hpc.kaust.edu.sa" ]]; then
    export LOCAL_FOAM=/project/k1459/ceschia/OpenFOAM
elif [[ $(hostname) == "lenovo" ]]; then
    export LOCAL_FOAM=/mnt/NewHDD
else
    export LOCAL_FOAM=~/OpenFOAM
fi

alias gas='cd $LOCAL_FOAM/gas'
alias gassol='cd $LOCAL_FOAM/gas/solver'
alias gassrc='cd $LOCAL_FOAM/gas/src'
alias gasrun='cd $LOCAL_FOAM/gas/run'
alias gastut='cd $LOCAL_FOAM/gas/tutorial'
alias gasutil='cd $LOCAL_FOAM/gas/utility'
